<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.groot.lefo.FollowCode">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/linearLayout"
        android:gravity="center_horizontal">

        <Space
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LeFo Code"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:id="@+id/textView"
            android:textColor="@color/accent"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Code Here"
            android:textColorHint="@color/secondary_text"
            android:textSize="25sp"
            android:id="@+id/insertCode"
            android:gravity="center"
            android:inputType="number"
            android:maxLength="8"
            android:maxLines="1"
            android:textColor="@color/accent"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="45dp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start pursuit"
            android:id="@+id/connectBTN"
            android:textSize="@dimen/abc_text_size_button_material"
            android:background="@drawable/buttonb"
            android:textColor="@color/texticons"
            android:onClick="connect"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="QR Code"
            android:textSize="@dimen/abc_text_size_body_2_material"
            android:textColor="@color/accent"
            android:layout_gravity="center_horizontal"
            android:id="@+id/textView2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR Code"
            android:id="@+id/qrCodeBTN"
            android:textSize="@dimen/abc_text_size_button_material"
            android:background="@drawable/buttono"
            android:textColor="@color/texticons"
            android:onClick="qrCode"
            android:elevation="5dp" />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/mProgressBar"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</RelativeLayout>
